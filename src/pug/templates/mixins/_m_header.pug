mixin header
	header.header
		.header_in 
			a(href='#').header_logo
				img(src="../images/header_logo.png", alt="")
			nav.header_nav 
				+menu({
					gl_class: 'header_nav',
					items: [
						{title: 'О нас', url: '#', active: false},
						{title: 'Решения', url: '#', active: false},
						{title: 'Аналитика', url: '#', active: false},
						{title: 'Партнеры', url: '#', active: false},
						{title: 'Контакты', url: '#', active: false},
						{title: 'Подписка', url: '#', active: false}
					]
				})
			+social({
				mod_block: 'header_social main_social',
				items: [
					{name_icon: 'facebook', mod_link: 'facebook'},
					{name_icon: 'twitter', mod_link: 'twitter'},
					{name_icon: 'rss', mod_link: 'rss'},
					{name_icon: 'youtube', mod_link: 'youtube'}
				]
			})
			.header_search 
				+icon('search')

			+lang({
				items:[
					{name: 'Ua'},
					{name: 'Ru'}
				]
			})
			.burger 
				span 
				span 
				span
		